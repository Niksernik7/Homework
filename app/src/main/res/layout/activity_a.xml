<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#f44336">

    <!-- Кнопки для открытия ActivityB и FragmentB -->
    <Button
        android:id="@+id/button_open_activity_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open_activityb" />

    <Button
        android:id="@+id/button_open_fragment_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open_fragmentb" />

    <!-- Контейнер для фрагментов -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp" />
</LinearLayout>
